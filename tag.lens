<koken:include file="layout/header.html" />
<koken:include file="layout/nav.html" />
<koken:load limit="30" infinite="true">
    <div id="top" class="bg-alt">
        <div class="container-fluid fadeIn">
            <div class="col-lg-12 text-xs-center">

                <koken:if true="settings.show_header">
                    <h2 class="m-t-0 text-primary">{{ labels.tag.singular }}: {{ tag.title }}<span><sup>{{ tag.counts.total }}</sup></span></h2>
                    <hr class="primary hidden-sm-up">
                </koken:if>

                <div>
                    <koken:include file="layout/breadcrumbs.html" />
                </div>
            </div>
            <koken:include file="layout/events.php" />
        </div>
    </div>
    <koken:else>
        <div class="col-md-12">
            <div id="top" class="bg-alt">
                <div class="container-fluid fadeIn">
                    <h2 class="text-xs-center">Sorry, {{ language.no_items_were_found case="lower" }}</h2>
                </div>
            </div>
        </div>
</koken:load>
<koken:include file="layout/loading.html" />
</div>
<koken:include file="layout/footer.html" />
